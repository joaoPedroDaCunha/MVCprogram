@model IEnumerable<Project.Models.Dependants>

@{
    ViewData["Title"] = "Dependants";
}

<h1>@ViewData["Title"]</h1>


<a asp-action="Create"><button style="border-radius: 5px;">New Dependants</button></a>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parentage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Parentage)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID"><button style="border-radius: 5px;">Edit</button></a> |
                <a asp-action="Details" asp-route-id="@item.ID"><button style="border-radius: 5px;">Details</button></a> |
                <a asp-action="Delete" asp-route-id="@item.ID"><button style="border-radius: 5px;">Delete</button></a>
            </td>
        </tr>
}
    </tbody>
</table>
